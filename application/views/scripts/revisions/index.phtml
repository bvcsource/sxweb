<?php 
    $pretty_print_rev_hash = function($hash) {
        $hash = substr($hash, 0, strrpos($hash, ':'));
        $hash = substr($hash, 0, strrpos($hash, '.'));
        return $hash;
    }
?>
<div class="wrap">
<h1><?php echo $this->translate('File Revisions'); ?></h1>
<hr/>
<?php if (isset($this->error)): ?>
    <p><?php echo $this->error; ?></p>
<?php else:

    echo '<p>',sprintf($this->translate('File: <strong>%s</strong>'), $this->escape($this->path)),'</p>',PHP_EOL;
    
    if (empty($this->revisions)) {
        echo '<p>',$this->translate('No revisions found.'),'</p>',PHP_EOL;
    } else {
    
        $has_revisions = (count($this->revisions) > 1);
    echo '<p>',$this->translate('Available revisions (most recent first):'),'</p>',PHP_EOL;

        ?>
        <form action="/revs/<?php echo $this->escape($this->sxUrlEncode($this->path)); ?>" method="post">
            <table class="table-revisions">
<?php
                $is_first = TRUE;
                $rev_no = 1;
                foreach($this->revisions as $rev) {
                    ?><tr><td><?php if ($is_first) { $is_first = FALSE; } else { ?><input type="radio" name="rev_id" value="<?php echo sha1($rev['rev']); ?>"><?php } ?></td><td><a href="/revdl/<?php echo sha1($rev['rev']),'/', $this->escape($this->sxUrlEncode($this->path)); ?>" title="<?php echo $this->translate('Download this revision'); ?>"><?php printf($this->translate('Rev. %d'), $rev_no); ?></a></td><td><?php echo $pretty_print_rev_hash($rev['rev']);  ?></td><td><?php echo $this->fileSizeFormat($rev['size']); ?></td></tr><?php
                    $rev_no++;
                }
?>
            </table>
            <p><?php if (count($this->revisions) > 1) { ?><input type="submit" class="styled-button" name="frm_revs_action" value="<?php echo $this->translate('Restore'); ?>"> <?php } ?><a href="/vol/<?php echo $this->sxUrlEncode($this->file_path); ?>" ><?php echo $this->translate('Cancel'); ?></a></p>
        </form>
<?php
    }
endif; 
?>
</div>